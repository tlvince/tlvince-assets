body
  font-family Georgia, serif
  font-size 21px
  line-height 1.52
  background-color #f8f8f8
  text-rendering optimizeLegibility
  &.article-detail
    & > header
      margin-bottom 3em
  &.home
    ul
      li
        list-style none
        margin 0


.content-wrap
  width 28em
  margin 0 auto

body, a
  color #171717

a
  text-decoration underline
  &:hover
    color orange
    text-decoration none

p
  margin-bottom 1.52em
  code
    padding 0.1em 0.3em 0.2em
    border-radius 0.3em
    position relative
    top -0.15em
    background #444
    color white
    white-space nowrap

pre
  font-size 0.9em
  overflow auto
  background white
  border 1px dashed #d2d2d2
  border-radius 0.25em
  margin-bottom 1.8em
  padding 1em
  code
    display block
    line-height 1.1

h1
  font-size 2em
  margin-bottom 1em

h2
  font-size 1.4em
  font-weight 400
  line-height 1.43
  margin-bottom 1.35em

h3
  font-weight 400
  font-size 1.2em
  margin-top 1.8em
  margin-bottom 0.8em

li
  margin-bottom 0.5em

blockquote
  margin 1.2em 3em
  padding-left 1em
  font-style italic

hr
  border 0
  border-top 1px dashed #d2d2d2
  height 0
  margin 1.6em 0

.header
  margin 3em 0 5em
  margin 1em 0
  h1
    font-size 2.5em
    text-align center
    font-style italic
    font-weight 400
    margin 0 0 -0.2em
  .description
    font-size 1.2em
    font-style italic
    text-align center
    margin-top -0.3em
    font-size 1em
  a, a:hover
    text-decoration none
    color #171717

footer
  margin 3.48em 0 3em
  .nav
    text-align center
    margin-top 5em
    margin-bottom 3.5em
    margin 1em 0
    a
      padding 0 0.5em
      font-size 1.2em
      text-decoration none
  .copy
    text-align center
    font-size 0.7em
    font-style italic
    margin-top 1em
    &, & a
      color lightGrey

.article
  margin-top 3em
  header
    h2
      margin-bottom 0
    time
      color lightGrey
      font-size 0.8em
      span.ord
        font-size 0.7em
        vertical-align super
  dt
    font-style italic
    font-weight 400
    margin 0.8em 0 0.4em
    font-size 1.4em
    a
      text-decoration none
  dd
    margin 0 0 1.52em
  .content
    img
      display block
      width 100%
