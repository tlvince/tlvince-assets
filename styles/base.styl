body
  font-family 'Lora', Georgia, serif
  font-size 21px
  line-height 1.52
  background-color #f8f8f8
  text-rendering optimizeLegibility
  &.article-detail
    & > header
      margin-bottom 3em

.content-wrap
  width 34em
  margin 0 auto

body, a
  color #171717

a
  &:hover
    color #ff8000
    text-decoration underline

p
  margin-bottom 1.52em
  code
    padding 0.1em 0.3em 0.2em
    border-radius 0.3em
    position relative
    top -0.15em
    background #444
    color #fff
    white-space nowrap

pre
  font-size 0.9em
  overflow auto
  background #fff
  border 1px dashed #d2d2d2
  border-radius 0.25em
  margin-bottom 1.8em
  padding 1em
  code
    display block
    line-height 1.1

h1
  font-size 2em
  margin-bottom 1em

h2
  font-size 1.2em
  font-weight 400
  line-height 1.43
  margin-bottom 1.35em

h3
  font-style italic
  text-align center
  font-weight 400
  font-size 1.4em
  margin-top 1.8em
  margin-bottom 0.8em

ol, ul
  margin 0 1.4em 1.4em 4em

li
  margin-bottom 0.5em

blockquote
  margin 1.2em 3em
  padding-left 1em
  font-style italic

hr
  border 0
  border-top 1px dashed #d2d2d2
  height 0
  margin 1.6em 0

.header
  margin 3em 0 5em
  margin 1em 0
  h1
    font-size 2.5em
    text-align center
    font-style italic
    font-weight 400
    margin 0 0 -0.2em
  .description
    font-size 1.2em
    font-style italic
    text-align center
    margin-top -0.3em
    font-size 1em

.header a, .header a:hover
  text-decoration none
  color #171717

footer
  margin 3.48em 0 3em
  .nav
    text-align center
    margin-top 5em
    margin-bottom 3.5em
    margin 1em 0
    a
      padding 0 0.5em
      font-size 1.2em
      text-decoration none
  .about
    border-top 1px dashed #d2d2d2
    padding 2.2em 3em
    font-size 0.7em
    padding 0
    font-size 0.9em
    padding-top 1.6em
    p
      margin-bottom 1em
  .copy
    text-align center
    font-size 0.7em
    font-style italic
    margin-top 1em

footer .copy, footer .copy a
  color #8e8e8e

.article
  margin 3em 0 4em
  margin 1em 0 2.5em
  header
    border-top 1px dashed #d2d2d2
    .date
      text-align center
      font-size 0.8em
      margin-top -0.7em
      span
        background-color #f8f8f8
        padding 0 0.7em
  dt
    font-style italic
    font-weight 400
    margin 0.8em 0 0.4em
    font-size 1.4em
    a
      text-decoration none
  dd
    margin 0 0 1.52em
  .content
    img
      display block
      width 100%
