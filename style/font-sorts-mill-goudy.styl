base = '../font/'

@font-face
  font-family: 'SortsMillGoudy'
  src: url(base + 'goudystm-italic-webfont.eot')
  src: url(base + 'goudystm-italic-webfont.eot?#iefix') format('embedded-opentype'),
    url(base + 'goudystm-italic-webfont.woff') format('woff'),
    url(base + 'goudystm-italic-webfont.ttf') format('truetype'),
    url(base + 'goudystm-italic-webfont.svg#SortsMillGoudyItalic') format('svg')
  font-weight: normal
  font-style: italic

@font-face
  font-family: 'SortsMillGoudy'
  src: url(base + 'goudystm-webfont.eot')
  src: url(base + 'goudystm-webfont.eot?#iefix') format('embedded-opentype'),
    url(base + 'goudystm-webfont.woff') format('woff'),
    url(base + 'goudystm-webfont.ttf') format('truetype'),
    url(base + 'goudystm-webfont.svg#SortsMillGoudyRg') format('svg')
  font-weight: normal
  font-style: normal
